#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
srcdir=@srcdir@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=/etc

#---[ Library configuration ]------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
SONAME=@SONAME@

LIBRARY_SOURCES= \
	$(wildcard $(srcdir)/src/libvmdetect/*.cc) \
	$(wildcard $(srcdir)/src/libvmdetect/os/@OSNAME@/*.cc) \
	$(wildcard $(srcdir)/src/libvmdetect/os/@OSNAME@/*.rc)

APPLICATION_SOURCES= \
	$(wildcard $(srcdir)/src/vmdetect/*.cc)

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
DLLTOOL=@DLLTOOL@
STRIP=@STRIP@

DLL_LDFLAGS=@DLL_LDFLAGS@

OBJDIR=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

DEPENDS= \
	Makefile

CFLAGS= \
	@CXXFLAGS@ \
	-I$(srcdir)/src/include \
	-Isrc/include \
	-DHAVE_CONFIG_H=1 \
	-DBUILD_DATE=`date +%Y%m%d` \
	@SYSTEMD_CFLAGS@ \
	@WMI_CFLAGS@

LDFLAGS= \
	@LDFLAGS@

LIBS= \
	@LIBS@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(SONAME) \
	$(BINRLS)/$(PACKAGE_NAME)@EXEEXT@

Release: \
	$(BINRLS)/$(SONAME) \
	$(BINRLS)/$(PACKAGE_NAME)@EXEEXT@

$(BINRLS)/$(PACKAGE_NAME)@EXEEXT@: \
	$(foreach SRC, $(basename $(APPLICATION_SOURCES)), $(OBJRLS)/$(SRC).o) \
	$(BINRLS)/$(SONAME) \
	$(BINRLS)/lib$(PACKAGE_NAME).a

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$(foreach SRC, $(basename $(APPLICATION_SOURCES)), $(OBJRLS)/$(SRC).o) \
		$(BINRLS)/$(SONAME) \
		-L$(BINRLS) \
		$(LDFLAGS) \
		$(LIBS)

$(BINRLS)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		$(DLL_LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS) @SYSTEMD_LIBS@ @WMI_LIBS@

$(BINRLS)/lib$(PACKAGE_NAME).a: \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(AR) rcs $@ $^

#---[ Install Targets ]------------------------------------------------------------------

install: \
	$(BINRLS)/$(SONAME) \
	$(BINRLS)/$(PACKAGE_NAME)@EXEEXT@ \
	install-@OSNAME@ \
	install-dev

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME)@EXEEXT@ \
		$(DESTDIR)$(bindir)

install-linux: \
	$(BINRLS)/$(SONAME)

	# Install library
	@$(MKDIR) $(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(SONAME) \
		$(DESTDIR)$(libdir)/$(SONAME)
		
install-windows: \
	$(BINRLS)/@SONAME@

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(bindir)/@SONAME@
		
	@$(STRIP) \
		--strip-all \
		$(DESTDIR)$(bindir)/@SONAME@
				
install-dev: \
	install-@OSNAME@-dev \
	install-@OSNAME@-static 
	
	@$(MKDIR) \
		$(DESTDIR)$(includedir)/@PACKAGE_NAME@

	@$(INSTALL_DATA) \
		src/include/@PACKAGE_NAME@/*.h \
		$(DESTDIR)$(includedir)/@PACKAGE_NAME@

	# Install PKG-CONFIG files
	@$(MKDIR) \
		$(DESTDIR)$(libdir)/pkgconfig

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/dynamic.pc \
		$(DESTDIR)$(libdir)/pkgconfig/$(PACKAGE_NAME).pc

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/static.pc \
		$(DESTDIR)$(libdir)/pkgconfig/$(PACKAGE_NAME)-static.pc

install-linux-static: \
	$(BINRLS)/lib$(PACKAGE_NAME).a

	# Install static library
	@$(MKDIR) $(DESTDIR)$(libdir)
	@$(INSTALL_DATA) \
		$(BINRLS)/lib$(PACKAGE_NAME).a \
		$(DESTDIR)$(libdir)/lib$(PACKAGE_NAME).static.a

install-windows-static: \
	$(BINRLS)/lib$(PACKAGE_NAME).a

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/lib$(PACKAGE_NAME).a \
		$(DESTDIR)$(libdir)/lib$(PACKAGE_NAME).a

install-linux-dev:

	# Install linux SDK
	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(LN_S) \
		$(SONAME) \
		$(DESTDIR)$(libdir)/lib$(PACKAGE_NAME).so

install-windows-dev:

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(DLLTOOL) \
		--input-def $(BINRLS)/$(PACKAGE_NAME).def \
		--dllname @SONAME@ \
		--output-lib $(DESTDIR)$(libdir)/lib$(PACKAGE_NAME).dll.a
		
	
#---[ Uninstall Targets ]----------------------------------------------------------------

uninstall: \
	uninstall-@OSNAME@

uninstall-linux:

	@rm -f \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/$(PACKAGE_NAME)@EXEEXT@

$(BINDBG)/$(PACKAGE_NAME)@EXEEXT@: \
	$(BINDBG)/$(SONAME) \
	$(foreach SRC, $(basename $(APPLICATION_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LDFLAGS) \
		$(LIBS)


$(BINDBG)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		$(DLL_LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		@SYSTEMD_LIBS@ @WMI_LIBS@

run: \
	$(BINDBG)/$(PACKAGE_NAME)@EXEEXT@

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/$(PACKAGE_NAME)@EXEEXT@

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
		$(BINDBG)/$(PACKAGE_NAME)@EXEEXT@
endif

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease


-include $(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).d)


